<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:background="#000000">

   	<TextView 
   	    android:id="@+id/display" 
   	    android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:text=""
		android:singleLine="true" 
		android:textSize="40dip" 
		android:textColor="#F0F8FF"
		android:gravity="right" 
		android:background="#000000" />
   	

   	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="center">
		<Button 
		    android:id="@+id/button1" 
		    android:text="1"
			android:textSize="40dip" 
			android:layout_width="60dip"
			android:layout_height="60dip" 
			android:textColor="#F0F8FF"
			android:background="#000000" />
		<Button android:id="@+id/button2" 
		    android:text="2"
			android:textSize="40dip" 
			android:layout_width="60dip"
			android:layout_height="60dip" 
			android:textColor="#F0F8FF"
			android:background="#000000" />
		<Button android:id="@+id/button3" 
		    android:text="3"
			android:textSize="40dip" 
			android:layout_width="60dip"
			android:layout_height="60dip" 
			android:textColor="#F0F8FF"
			android:background="#000000" />
		<Button android:id="@+id/button4" 
		    android:text="4"
			android:textSize="40dip" 
			android:layout_width="60dip"
			android:layout_height="60dip" 
			android:textColor="#F0F8FF"
			android:background="#000000" />
		<Button android:id="@+id/button5" 
		    android:text="5"
			android:textSize="40dip" 
			android:layout_width="60dip"
			android:layout_height="60dip" 
			android:textColor="#F0F8FF"
			android:background="#000000" />
	</LinearLayout>
	
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="center">
			
			<Button
				android:id="@+id/button6"
				android:text="6"
				android:textSize="40dip"
				android:layout_width="60dip"
				android:layout_height="60dip"
				android:textColor="#F0F8FF"
				android:background="#000000"/>
			<Button 
			    android:id="@+id/button7" 
			    android:text="7" 
			    android:textSize="40dip" 
			    android:layout_width="60dip" 
			    android:layout_height="60dip" 
			    android:textColor="#F0F8FF" 
			    android:background="#000000"/>
			<Button 
			    android:id="@+id/button8" 
			    android:text="8" 
			    android:textSize="40dip" 
			    android:layout_width="60dip" 
			    android:layout_height="60dip" 
			    android:textColor="#F0F8FF" 
			    android:background="#000000"/>
			<Button 
			    android:id="@+id/button9" 
			    android:text="9" 
			    android:textSize="40dip" 
			    android:layout_width="60dip" 
			    android:layout_height="60dip" 
			    android:textColor="#F0F8FF" 
			    android:background="#000000"/>
			<Button android:id="@+id/button0" 
			    android:text="0" 
			    android:textSize="40dip" 
			    android:layout_width="60dip" 
			    android:layout_height="60dip" 
			    android:textColor="#F0F8FF" 
			    android:background="#000000"/>
	 </LinearLayout>
	 
     <LinearLayout
     android:orientation="horizontal"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:gravity="center">
			<Button android:id="@+id/buttonPlus" 
			    android:text="+" 
			    android:textSize="40dip" 
			    android:layout_width="60dip" 
			    android:layout_height="60dip" 
			    android:textColor="#F0F8FF" 
			    android:background="#000000"/>
			<Button 
			    android:id="@+id/buttonMinus" 
			    android:text="-" android:textSize="40dip" 
			    android:layout_width="60dip" 
			    android:layout_height="60dip" 
			    android:textColor="#F0F8FF" 
			    android:background="#000000"/>
			<Button
				android:id="@+id/buttonMulti"
				android:text="*"
				android:textSize="40dip"
				android:layout_width="60dip"
				android:layout_height="60dip"
				android:textColor="#F0F8FF"
				android:background="#000000"/>
			<Button 
			    android:id="@+id/buttonDivid" 
			    android:text="/" 
			    android:textSize="40dip" 
			    android:layout_width="60dip" 
			    android:layout_height="60dip" 
			    android:textColor="#F0F8FF" 
			    android:background="#000000"/>
			<Button
			    android:id="@+id/buttonTen"
			    android:layout_width="60dip"
			    android:layout_height="60dip"
			    android:background="#000000"
			    android:text="."
			    android:textColor="#F0F8FF"
			    android:textSize="40dip" />			
	</LinearLayout>
	     
	<LinearLayout
	    android:id="@+id/linearLayout1"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="right"
	    android:gravity="left"
	    android:orientation="horizontal"
	    android:weightSum="2" >
	    
	    <!-- First Column should be on the right : Text1-->
	
	    <LinearLayout
	        android:id="@+id/linearLayout3"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_weight="1.97" >
	
	        <Button
	            android:id="@+id/buttonClear"
	            android:layout_width="wrap_content"
	            android:layout_height="60dip"
	            android:background="#000000"
	            android:text="C"
	            android:textColor="#F0F8FF"
	            android:textSize="40dip" />
		</LinearLayout>
			
	        <!-- Second Column should be on the left : Text2 -->
	
	    <LinearLayout
	        android:id="@+id/linearLayout2"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent" >
	
	        <Button
	            android:id="@+id/buttonEqual"
	            android:layout_width="60dip"
	            android:layout_height="60dip"
	            android:background="#000000"
	            android:text="="
	            android:textColor="#F0F8FF"
	            android:textSize="40dip" />
	    </LinearLayout>
	    
	</LinearLayout>
	    <LinearLayout
	        android:id="@+id/IntentTest"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent" >
	
	        <Button
	            android:id="@+id/IntentTestButton"
	            android:layout_width="80dip"
	            android:layout_height="40dip"
	            android:background="#000000"
	            android:text="Go Intent!"
	            android:textColor="#F0F8FF"
	            android:textSize="15dip" />
	        
	    </LinearLayout>
	    
	<TextView
	    android:id="@+id/display_u"
	    android:layout_width="fill_parent"
	    android:layout_height="148dp"
	    android:background="#000000"
	    android:textColor="#F0F8FF"
	    android:textSize="12dip" />
   	
</LinearLayout>